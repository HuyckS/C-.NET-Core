@{
    ViewData["Title"] = "Login Page";
}

@model LoginUser

<div class="text-center">
    <h2 class="text-primary">Sign-In</h2>
    <div>
        <form action="/login-user" method="post">
            <div class="form-group">
                <div>
                    <label class="text-dark" asp-for='LoginEmail'></label>
                </div>
                <input asp-for='LoginEmail' type='text' />
                <span asp-validation-for='LoginEmail' class='validation' style="color:red"></span>
            </div>
            <div class="form-group">
                <div>
                    <label class="text-dark" asp-for='LoginPassword'></label>
                </div>
                <input asp-for='LoginPassword' type='password' />
                <span asp-validation-for='LoginPassword' class='validation' style="color:red"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-info" type="submit" value="Sign in!">
            </div>
        </form>
    </div>
</div>