@* ViewBag.CurrentUser *@

@{
    ViewData["Title"] = "New Project";
}
@model Project;
<div>
    <h1 class="text-primary">Set-up a project</h1>
    <form action="/create-project" method="post" class="d-flex justify-content-sm-around">
        <div>
            <div class="form-group">
                <div>
                    <label asp-for='Title'></label>
                </div>
                <input asp-for='Title' type='text' />
                <span asp-validation-for='Title' style="color:red" class='validation'></span>
            </div>
            <div>
                <div>
                    <label asp-for='ProjectDescription'></label>
                </div>
                <textarea name="ProjectDescription" id="Description" cols="50" rows="25"
                    placeholder="Describe the requirements for your project here."></textarea>
                <span asp-validation-for='ProjectDescription' style="color:red" class='validation'></span>
            </div>
        </div>
        <div>
            <div class="form-group">
                <div>
                    <label asp-for='ProjectStartDate'></label>
                </div>
                <input asp-for='ProjectStartDate' type='date' />
                <span asp-validation-for='ProjectStartDate' style="color:red" class='validation'></span>
            </div>
            <div class="form-group">
                <div>
                    <label asp-for='ProjectDueDate'></label>
                </div>
                <input asp-for='ProjectDueDate' type='date' />
                <span asp-validation-for='ProjectDueDate' style="color:red" class='validation'></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Create Project">
            </div>
        </div>
    </form>
</div>