@* ViewBag.CurrentUser *@

@{
    ViewData["Title"] = "Login Page";
}

<div>
    <div class="d-flex justify-content-between">
        <h1 class="text-primary">Welcome back, @ViewBag.CurrentUser.FirstName!</h1>

    </div>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Project</th>
                <th>Project Due Date</th>
                <th>Days Remaining</th>
                <th>Taskers</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Project p in @ViewBag.Projects)
            {
                <tr>
                    <td><a class="text-info" href="/project-details/@p.ProjectId">@p.Title</a></td>
                    <td>@p.ProjectDueDate.ToString("M/d/y")</td>
                    <td>@((@p.ProjectDueDate - DateTime.Now).Days)</td>
                    <td>
                        @if(@p.ProjectTaskers != null)
                        {
                            @foreach (Tasker t in @p.ProjectTaskers)
                            {
                                @if (@t.TaskerComplete == false)
                                {
                                    <p>@t.TaskerDescription</p>
                                }
                            }
                        }
                        else
                        {
                            <p>No Current Tasks</p>
                        }
                    </td>
                    <td><a href="/edit/project/@p.ProjectId"><button class="btn btn-warning">Edit</button></a> | <a><button class="btn btn-info">Archive</button></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <ul>

        @foreach (Message m in @ViewBag.UserMessages)
        {
            if (@m.Viewed == false)
            {
                <li>
                    <p>From: @m.Sender.FirstName</p>
                    <p>@m.MessageContent</p>
                    <p><a><button class="btn btn-info">Mark Viewed</button></a> | <a><button class="btn btn-success">Respond</button></a></p>>
                </li>
            }
        }
    </ul>
</div>
<div>
    <a href="/project-form"><button class="btn btn-primary">Create Project</button></a>
</div>
</div>