@{
    ViewData["Title"] = "Edit Project";
}
@model Project;
<div>
    <h1 class="text-danger">Editing @Model.Title</h1>
    <form action="/edit-project" method="post" class="d-flex justify-content-sm-around rounded bg-info text-light m-3 p-5">
        <div>
            <div class="form-group">
                <div>
                    <label asp-for='Title'></label>
                </div>
                <input asp-for='Title' type='text' value="@Model.Title" />
                <span asp-validation-for='Title' style="color:red" class='validation'></span>
            </div>
            <div>
                <div>
                    <label asp-for='ProjectDescription'></label>
                </div>
                <textarea name="ProjectDescription" id="ProjectDescription" cols="50" rows="25" value="@Model.ProjectDescription"></textarea>
                <span asp-validation-for='ProjectDescription' style="color:red" class='validation'></span>
            </div>
        </div>
        <div>
            <div class="form-group">
                <div>
                    <label asp-for='ProjectStartDate'></label>
                </div>
                <input asp-for='ProjectStartDate' type='date' value="@Model.ProjectStartDate" />
                <span asp-validation-for='ProjectStartDate' style="color:red" class='validation'></span>
            </div>
            <div class="form-group">
                <div>
                    <label asp-for='ProjectDueDate'></label>
                </div>
                <input asp-for='ProjectDueDate' type='date' />
                <span asp-validation-for='ProjectDueDate' style="color:red" class='validation' value="@Model.ProjectDueDate"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-danger" type="submit" value="Update">
            </div>
        </div>
    </form>
</div>