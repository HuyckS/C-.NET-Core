@model LoginUser

<div>
    <h2>Login</h2>
    <div>
        <form action="/login-user" method="post">
            <div class="form-group">
                <div>
                    <label asp-for='LoginEmail'></label>
                </div>
                <input asp-for='LoginEmail' type='text' />
                <span asp-validation-for='LoginEmail' class='validation'></span>
            </div>
            <div class="form-group">
                <div>
                    <label asp-for='LoginPassword'></label>
                </div>
                <input asp-for='LoginPassword' type='password' />
                <span asp-validation-for='LoginPassword' class='validation'></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Sign in!">
            </div>
        </form>
    </div>
</div>