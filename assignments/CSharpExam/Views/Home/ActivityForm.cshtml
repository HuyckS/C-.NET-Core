@{
    ViewData["Title"] = "Create Activity";
}

@model CSharpExam.Models.ActivityEvent;


<div class="d-flex justify-content-sm-between">
    <h1 class="display-4" style="color:#007BFF">Dojo Activity Center</h1>
    <div>
        <a href="/dashboard"><button class="btn btn-primary">Home</button></a>
        <a href="/logout"><button class="btn btn-secondary">Log out</button></a>
    </div>
</div>

<div>
    <form action="/create-activity" method="post">
        <div class="form-group">
            <div>
                <label asp-for='Title'></label>
            </div>
            <input asp-for='Title' type='text' />
            <span asp-validation-for='Title' style="color:red" class='validation'></span>
        </div>
        <div class="form-group">
            <div>
                <label asp-for='Date'></label>
            </div>
            <input asp-for='Date' type='date' />
            <span asp-validation-for='Date' style="color:red" class='validation'></span>
        </div>
        <div class="form-group">
            <div>
                <label asp-for='Time'></label>
            </div>
            <input asp-for='Time' type='time' />
            <span asp-validation-for='Time' style="color:red" class='validation'></span>
        </div>
        <div class="form-group">
            <div>
                <label asp-for='Duration'></label>
            </div>
            <input asp-for='Duration' type='number' />
            <span asp-validation-for='Duration' style="color:red" class='validation'></span>
        </div>
        <div class="form-group">
            <select id="TimeMeasurement" name="TimeMeasurement">
                <option></option>
                <option value="Minutes">Minutes</option>
                <option value="Hours">Hours</option>
                <option value="Days">Days</option>
            </select>
            <span asp-validation-for='TimeMeasurement' style="color:red" class='validation'></span>
        </div>
        <div>
            <div>
                <label asp-for='Description'></label>
            </div>
            <textarea name="Description" id="Description" cols="30" rows="10" placeholder="Tell us about your event here!"></textarea>
            <span asp-validation-for='Description' style="color:red" class='validation'></span>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Create Activity">
        </div>
    </form>
</div>