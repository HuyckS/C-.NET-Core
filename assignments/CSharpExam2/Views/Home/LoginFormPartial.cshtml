@model LoginUser

<div>
    <h2>Login</h2>
    <div class="text-left">
        <form action="/login-user" method="post">
            <div class="form-group">
                <div>
                    <label asp-for='LoginUsername'></label>
                </div>
                <input asp-for='LoginUsername' type='text' />
                <span asp-validation-for='LoginUsername' class='validation' style="color:red"></span>
            </div>
            <div class="form-group">
                <div>
                    <label asp-for='LoginPassword'></label>
                </div>
                <input asp-for='LoginPassword' type='password' />
                <span asp-validation-for='LoginPassword' class='validation' style="color:red"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Sign in!">
            </div>
        </form>
    </div>
</div>