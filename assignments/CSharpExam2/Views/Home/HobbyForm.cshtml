@{
    ViewData["Title"] = "Create Hobby";
}

@model CSharpExam2.Models.Hobby;

<div>
    <h1>Create a Hobby</h1>

    <form action="/create-hobby" method="post">
        <div class="form-group">
            <div>
                <label asp-for='Name'></label>
            </div>
            <input asp-for='Name' type='text' />
            <span asp-validation-for='Name' style="color:red" class='validation'></span>
        </div>
        <div>
            <div>
                <label asp-for='Description'></label>
            </div>
            <textarea name="Description" id="Description" cols="30" rows="10" placeholder="Tell us about your hobby here!"></textarea>
            <span asp-validation-for='Description' style="color:red" class='validation'></span>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Create">
        </div>
    </form>

</div>