@{
    ViewData["Title"] = "Products Page";
}

<div class="text-center">
    <h1 class="display-4">Products | <a href="/categories">Categories</a></h1>
    <div>
        <div>
            <h3>New Product</h3>
            <form action="create-product" method="post">
                <div>
                    <label asp-for='Name'></label>
                    <input asp-for='Name' type='text' />
                    <span asp-validation-for='Name' class='validation'></span>
                </div>
                <div>
                    <label asp-for='Description'></label>
                    <input asp-for='Description' type='text' />
                    <span asp-validation-for='Description' class='validation'></span>
                </div>
                <div>
                    <label asp-for='Price'></label>
                    <input asp-for='Price' type='number' step="0.01" />
                    <span asp-validation-for='Price' class='validation'></span>
                </div>
                <div>
                    <input type="submit" value="Create">
                </div>
            </form>
        </div>
        <div>
            <h3>Existing Products</h3>

        </div>
    </div>
</div>
